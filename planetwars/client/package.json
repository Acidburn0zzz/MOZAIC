{
  "name": "bottlebats",
  "productName": "BottleBats",
  "version": "0.5.0",
  "description": "Client for the 2018 edition of the BottleBats AI competition",
  "keywords": [
    "BottleBats",
    "Zeus WPI",
    "AI",
    "MOZAIC",
    "competition",
    "electron",
    "react"
  ],
  "main": "app/main.js",
  "author": {
    "name": "Zeus WPI",
    "email": "bottlebats@zeus.ugent.be",
    "url": "https://zeus.ugent.be/"
  },
  "homepage": "https://bottlebats.zeuswpi.org/",
  "bugs": {
    "url": "https://github.com/ZeusWPI/MOZAIC/issues",
    "email": "bottlebats@zeus.ugent.be"
  },
  "license": "MIT",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZeusWPI/MOZAIC.git"
  },
  "scripts": {
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "build-main": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack/webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack/webpack.config.production.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "start": "cross-env NODE_ENV=production electron .",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./app/main.development",
    "postinstall": "npm run build",
    "dev": "npm run hot-server -- --start-hot",
    "package": "npm run build && build --publish never",
    "package-win": "npm run build && build --win --x64",
    "package-linux": "npm run build && build --linux",
    "package-mac": "npm run build && build --mac",
    "package-all": "npm run build && build -mwl"
  },
  "build": {
    "productName": "BottleBats",
    "appId": "org.zeuswpi.bottlebats",
    "copyright": "Copyright Â© 2018 Zeus WPI",
    "files": [
      "app/dist/",
      "node_modules/",
      "app/app.html",
      "app/main.js",
      "app/main.js.map",
      "bin/",
      "app/components/visualizer/lib/assets/",
      "resources/icon.*",
      "resources/maps/",
      "resources/bots/"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.games"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "bulma": "^0.6.2",
    "classnames": "^2.2.5",
    "d3": "^4.11.0",
    "electron-debug": "^1.1.0",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.3",
    "font-awesome": "^4.7.0",
    "history": "^4.6.1",
    "hyperscript-helpers": "^3.0.3",
    "lowdb": "^1.0.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.21.0",
    "mozaic-client": "file:../../client",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-helpers": "0.0.1",
    "react-hyperscript": "^3.0.0",
    "react-hyperscript-helpers": "^1.2.0",
    "react-jsonschema-form": "^1.0.0",
    "react-redux": "^5.0.1",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "source-map-support": "^0.5.0",
    "string-argv": "0.0.2",
    "tmp": "0.0.33",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/classnames": "^2.2.3",
    "@types/d3": "^4.12.0",
    "@types/enzyme": "^3.1.1",
    "@types/history": "^4.5.2",
    "@types/lowdb": "^1.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mz": "^0.0.32",
    "@types/node": "^8.0.2",
    "@types/react": "^16.0.40",
    "@types/react-dom": "16.0.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-hyperscript": "^3.0.0",
    "@types/react-redux": "^5.0.4",
    "@types/react-router": "^4.0.11",
    "@types/react-router-dom": "^4.0.7",
    "@types/react-router-redux": "^5.0.2",
    "@types/redux-logger": "^3.0.0",
    "@types/tmp": "0.0.33",
    "@types/uuid": "^3.4.3",
    "asar": "^0.13.1",
    "concurrently": "^3.1.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "css-modules-require-hook": "^4.0.6",
    "devtron": "^1.4.0",
    "electron": "^1.7.11",
    "electron-builder": "^19.8.0",
    "electron-builder-http": "^19.15.0",
    "electron-devtools-installer": "^2.0.1",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.24.1",
    "json-loader": "^0.5.4",
    "mz": "^2.7.0",
    "node-sass": "^4.1.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^16.0.0",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.6",
    "spectron": "^3.4.1",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.1.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "url-loader": "^0.6.1",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-merge": "^2.0.0"
  },
  "devEngines": {
    "node": ">=8.x",
    "npm": ">=5.x"
  }
}
