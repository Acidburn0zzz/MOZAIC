{
    "compilerOptions": {
      "outDir": ".",
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "sourceMap": true,
      "jsx": "react",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }